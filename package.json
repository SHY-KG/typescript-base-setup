{
  "name": "typescript-base-setup",
  "version": "1.0.0",
  "description": "TypeScript setup with Prettier && ESlint",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsnd --respawn src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "jest": "^27.4.7",
    "prettier": "^2.4.1",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src/test",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SHY-KG/typescript-base-setup.git"
  },
  "keywords": [],
  "author": "SHY-KG",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SHY-KG/typescript-base-setup/issues"
  },
  "homepage": "https://github.com/SHY-KG/typescript-base-setup#readme"
}
